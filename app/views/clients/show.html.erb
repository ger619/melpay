<div class="p-6 space-y-6">
  <!-- Client Info Card -->
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4"><%= @client.name %></h1>

    <div class="space-y-2">
      <p class="text-gray-700 dark:text-gray-300"><span class="font-semibold">Email:</span> <%= @client.email %></p>
      <p class="text-gray-700 dark:text-gray-300"><span class="font-semibold">Phone:</span> <%= @client.phone %></p>

      <div class="mt-4">
        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">KYC Status</h3>
        <% case @client.kyc_status %>
        <% when "approved" %>
          <span class="inline-block mt-1 px-3 py-1 text-sm font-semibold text-green-800 bg-green-100 rounded-full">Approved</span>
        <% when "rejected" %>
          <span class="inline-block mt-1 px-3 py-1 text-sm font-semibold text-red-800 bg-red-100 rounded-full">Rejected</span>
        <% else %>
          <span class="inline-block mt-1 px-3 py-1 text-sm font-semibold text-yellow-800 bg-yellow-100 rounded-full">Pending</span>
        <% end %>
      </div>

      <% if @client.kyc_status == "pending" %>
        <div class="mt-4 flex space-x-3">
          <%= button_to "Approve KYC", approve_kyc_client_path(@client), method: :patch,
                class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium" %>
          <%= button_to "Reject KYC", reject_kyc_client_path(@client), method: :patch,
                class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Accounts Section -->
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Accounts</h3>
      <% if @client.kyc_status == "approved" %>
        <%= link_to "Add Account", new_client_account_path(@client),
              class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
      <% end %>
    </div>

    <% if @client.accounts.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @client.accounts.each do |account| %>
          <li class="py-3 flex justify-between items-center">
            <span class="text-gray-800 dark:text-gray-100">
              <%= account.account_number %>
            </span>
            <span class="text-sm text-gray-600 dark:text-gray-300">
              <%= account.account_type %>
            </span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500 dark:text-gray-400 italic">
        <% if @client.kyc_status == "approved" %>
          No accounts yet. Click "Add Account" to create one.
        <% else %>
          No accounts â€” KYC not approved.
        <% end %>
      </p>
    <% end %>
  </div>

  <!-- Back & Edit Actions -->
  <div class="flex space-x-3">
    <%= link_to "Edit", edit_client_path(@client),
          class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
    <%= link_to "Back to Clients", clients_path,
          class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-medium" %>
  </div>
</div>
