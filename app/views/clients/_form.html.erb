<div class="p-6 max-w-lg mx-auto">
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Create New Client</h1>

    <%= form_with model: @client, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :phone, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <div class="pt-4">
          <%= f.submit "Create Client", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
