<div class="p-6">
  <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Clients</h1>

  <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600 dark:text-gray-200">Name</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600 dark:text-gray-200">Email</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600 dark:text-gray-200">Phone</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-600 dark:text-gray-200">KYC Status</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @clients.each do |client| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
            <td class="px-6 py-4 text-gray-800 dark:text-gray-100"><%= client.name %></td>
            <td class="px-6 py-4 text-gray-600 dark:text-gray-300"><%= client.email %></td>
            <td class="px-6 py-4 text-gray-600 dark:text-gray-300"><%= client.phone %></td>
            <td class="px-6 py-4">
              <% case client.kyc_status %>
              <% when "approved" %>
                <span class="px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full">Approved</span>
              <% when "rejected" %>
                <span class="px-2 py-1 text-xs font-semibold text-red-800 bg-red-100 rounded-full">Rejected</span>
              <% else %>
                <span class="px-2 py-1 text-xs font-semibold text-yellow-800 bg-yellow-100 rounded-full">Pending</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to "View", client_path(client), class: "text-blue-600 dark:text-blue-400 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>